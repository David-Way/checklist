{
  "compilerOptions": {
    "paths": {
      "@components": ["./src/components/"]
    },
    "target": "esnext",
    "useDefineForClassFields": true,
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "./types",
    "types": ["node"]
  },
  "include": [
    "src",
    "vite/client",
    "vitest/globals",
    "types/declaration.d.ts",
    "types/vite-env.d.ts"
  ]
}