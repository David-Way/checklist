{
  "version": "1.0.0",
  "$id": "1000000",
  "title": "100 Pushups",
  "description": "A training program to go from just one pushup to 100 consecutive reps in less than two months.",
  "meta": {
    "author": "David Way",
    "lastUpdated": "17/01/2026",
    "tags": ["workout"]
  },
  "properties": {
    "Stage": {
      "type": "string",
      "enum": ["Week 1", "Week 2", "Week 3", "Week 4", "Week 5", "Week 6"],
      "default": "Week 1"
    },
    "Day": {
      "type": "string",
      "enum": ["Day 1", "Day 3", "Day 5"],
      "default": "Day 1"
    },
    "Intensity": {
      "type": "string",
      "enum": ["Beginner", "Intermediate", "Experienced"],
      "default": "Beginner"
    }
  },
  "required": ["Stage", "Day", "Intensity"],
  "allOf": [
    {
      "if": {
        "properties": {
          "Stage": {
            "const": "Week 1"
          },
          "Day": {
            "const": "Day 1"
          },
          "Intensity": {
            "const": "Beginner"
          }
        },
        "required": ["Stage", "Day", "Intensity"]
      },
      "then": {
        "properties": {
          "followUpQuestion": {
            "type": "object",
            "title": "Target Sets",
            "description": "Rest 60 seconds between sets",
            "properties": {
              "set1": {
                "type": "boolean",
                "label": "Set 1 - 2 reps"
              },
              "set2": {
                "type": "boolean",
                "label": "Set 2 - 3 reps"
              },
              "set3": {
                "type": "boolean",
                "label": "Set 3 - 2 reps"
              },
              "set4": {
                "type": "boolean",
                "label": "Set 4 - 2 reps"
              },
              "set5": {
                "type": "boolean",
                "label": "Set 5 - 3+ reps",
                "description": "Aim for 3, but do more if you can."
              }
            }
          }
        },
        "required": ["followUpQuestion"]
      }
    },
    {
      "if": {
        "properties": {
          "Stage": {
            "const": "Week 2"
          },
          "Day": {
            "const": "Day 1"
          },
          "Intensity": {
            "const": "Beginner"
          }
        },
        "required": ["Stage", "Day", "Intensity"]
      },
      "then": {
        "properties": {
          "followUpQuestion": {
            "type": "object",
            "title": "Target Sets",
            "description": "Rest 60 seconds between sets",
            "properties": {
              "set1": {
                "type": "boolean",
                "label": "Set 1 - 4 reps"
              },
              "set2": {
                "type": "boolean",
                "label": "Set 2 - 6 reps"
              },
              "set3": {
                "type": "boolean",
                "label": "Set 3 - 4 reps"
              },
              "set4": {
                "type": "boolean",
                "label": "Set 4 - 4 reps"
              },
              "set5": {
                "type": "boolean",
                "label": "Set 5 - 6+ reps",
                "description": "Aim for 3, but do more if you can."
              }
            }
          }
        },
        "required": ["followUpQuestion"]
      }
    }
  ]
}
